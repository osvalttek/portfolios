---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---

<Layout title="Portfolio | Contact">
	<Header />
	<main>
			<form class="form">
				<h2 class="form__title">Contact Form</h2>
				<label class="form__label" for="name">Full name</label>
				<input class="form__input" type="text" placeholder="Enter your Name" name="name" required>

				<label class="form__label" for="email">Email</label>
				<input class="form__input" type="email" placeholder="Enter your email" name="email" required>

				<label class="form__label" for="message">Message</label>
				<textarea class="form__message" id="message" name="message" rows="4" cols="50" maxlength="255" placeholder="Enter your message here" required></textarea>

				<button type="submit" class="form__btn">Send</button>
			</form>

		<section class="main__section">
			<iframe class="main__sectionMap" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d115093.57771547815!2d-100.37313555410266!3d25.648932995794198!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86629531b437f8f5%3A0xa3d3d3ca6ac89894!2sMonterrey%2C%20N.L.!5e0!3m2!1ses-419!2smx!4v1663794979036!5m2!1ses-419!2smx" loading="lazy" referrerpolicy="no-referrer-when-downgrade" ></iframe>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	main{
		width: 99vw;
		padding: 0.5rem;
		overflow: hidden;
	}
	.form{
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		margin-bottom: 2rem;
		border-radius: 1rem;
		padding: 1rem;
	}
	.form__title{
		color: #E40037;
		font-size: 2rem;
		font-weight: 700;
		letter-spacing: 0.2rem;
		width: 100%;
		text-align: center;
		margin-bottom: 1rem;
	}
	.form__label{
		color: #E40037;
		font-size: 1.6rem;
		font-weight: 700;
		letter-spacing: 0.2rem;
		width: 100%;
		text-align: left;
		margin-bottom: 0.5rem;
	}
	.form__input{
		width: 100%;
		height: 3rem;
		margin-bottom: 1rem;
		padding: 0.5rem;
		border-radius: 0.5rem;
		border: none;
	}
	.form__message{
		width: 100%;
		height: 10rem;
		margin-bottom: 1rem;
		border-radius: 0.5rem;
		resize: none;
		padding: 1rem;
	}
	.form__btn{
		padding: 0.7rem;
		margin-bottom: 0.5rem;
		border: none;
		border-radius: 1rem;
		width: 30%;
		font-size: 1.4rem;
		font-weight: 700;
		background-color: #E40037;
		color: #FFFFFE;
		box-shadow: 0px 0px 2px 2px rgba(138, 1, 1, 0.556);
		cursor: pointer;
	}
	.main__section{
		padding: 0.5rem;
		display: flex;
		justify-content: center;
	}
	.main__sectionMap{
		width: 90vw;
		height: auto;
		border-radius: 1rem;
		border: none;
	}

	@media only screen and (min-width: 800px) {
		main{
		padding: 1rem;
		display: flex;
		flex-direction: row;
	}
	.form{
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		padding: 1rem;
		margin-bottom: 2rem;
		border-radius: 1rem;
	}
	.form__title{
		font-size: 3.5rem;
		width: 100%;
	}
	.form__label{
		font-size: 2rem;
		width: 100%;
		text-align: left;
		margin-bottom: 1rem;
	}
	.form__input{
		width: 100%;
		height: 4.5rem;
		margin-bottom: 1rem;
		padding: 1rem;
		border-radius: 1rem;
		border: none;
	}
	.form__message{
		width: 100%;
		height: 14rem;
		margin-bottom: 1rem;
		border-radius: 1rem;
	}
	.form__btn{
		padding: 1rem;
		margin-top: 1rem;
		font-size: 1.8rem;
	}
	.main__section{
		padding: 1rem;
		width: 100%;
	}
	.main__sectionMap{
		width: 100%;
		height: auto;
		padding: 1rem;
		border-radius: 2rem;
	}
	}
</style>
